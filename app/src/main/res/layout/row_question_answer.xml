<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/p5dp"
    android:layout_marginRight="@dimen/p5dp"
    android:layout_marginTop="@dimen/p10dp"
    android:background="@color/background_grey"
    android:orientation="vertical"
    android:padding="@dimen/p10dp">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title"
        android:textSize="@dimen/s16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_create_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p5dp"
        android:textSize="@dimen/s14sp"/>

</LinearLayout>